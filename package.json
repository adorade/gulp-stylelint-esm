{
  "name": "gulp-stylelint-esm",
  "version": "2.0.0",
  "description": "Gulp plugin for stylelint with ES module support.",
  "author": {
    "name": "Adorade",
    "email": "office.adorade@gmail.com",
    "url": "https://adorade.ro"
  },
  "homepage": "https://github.com/adorade/gulp-stylelint-esm",
  "repository": {
    "type": "git",
    "url": "https://github.com/adorade/gulp-stylelint-esm.git"
  },
  "type": "module",
  "exports": "./src/index.mjs",
  "files": [
    "/src/*.mjs"
  ],
  "keywords": [
    "gulpplugin",
    "gulpfriendly",
    "stylelint",
    "postcss",
    "css",
    "scss",
    "esm"
  ],
  "scripts": {
    "lint": "eslint {src,test}/**/*.{mjs,js}",
    "jest": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js -i",
    "jest:coverage": "yarn run jest --coverage",
    "test": "yarn run lint && yarn run jest && GULP_5=1 yarn run jest",
    "prepublishOnly": "yarn run jest && GULP_5=1 yarn run jest"
  },
  "peerDependencies": {
    "stylelint": "16"
  },
  "dependencies": {
    "@adorade/plugin-error": "1.0.0",
    "@jridgewell/trace-mapping": "0.3.25",
    "ansi-colors": "4.1.3",
    "fancy-log": "2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.0",
    "@babel/eslint-parser": "7.23.10",
    "@babel/preset-env": "7.24.0",
    "babel-jest": "29.7.0",
    "eslint": "8.57.0",
    "eslint-config-stylelint": "21.0.0",
    "gulp": "4.0.2",
    "gulp5": "npm:gulp@5.0.0",
    "gulp-clean-css": "4.3.0",
    "gulp-concat": "2.6.1",
    "jest": "29.7.0",
    "sinon": "17.0.1",
    "stylelint": "16.2.1"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "license": "MIT"
}
